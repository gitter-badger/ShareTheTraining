# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET		/welcome		    		controllers.Application.welcome()

#login
POST    /login                   controllers.UserController.authenticate()
GET     /login                   controllers.UserController.login()
GET		/logout						controllers.UserController.logout()

#SignUp
GET		/signup						controllers.Application.blank()
POST	/signup						controllers.Application.submit()

GET 	/search						controllers.Application.search()

GET 	/course						controllers.Application.course(confirmed: Boolean ?= false, oid: String ?="")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
