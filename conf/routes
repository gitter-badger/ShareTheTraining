# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.welcome()

#login
GET    /forgetpsw                   controllers.Application.forgetpsw()
POST   /forgetpsw                   controllers.Application.forgetpswsubmit()
GET    /login                       controllers.Application.login()
POST   /login                       controllers.Application.loginAuthen()
GET    /logout                      controllers.Application.logout()


#signup-cus
GET    /signupcus                   controllers.Application.signupcus()
POST   /signupcus                   controllers.Application.signupcussubmit()
GET    /signuptrainer               controllers.Application.signuptrainer()
POST   /signuptrainer               controllers.Application.signuptrainersubmit()

#profile
GET    /profile                     controllers.Application.profile()
#profile-cus
GET    /cuscourseconfirmed          controllers.Application.cuscourseconfirmed()
GET    /cuscourseordered            controllers.Application.cuscourseordered()
GET    /cuscoursedone               controllers.Application.cuscoursedone()
GET    /cuscoursecanceled           controllers.Application.cuscoursecanceled()
GET    /cusinfo                     controllers.Application.cusinfo()
GET    /cusinfoedit                 controllers.Application.cusinfoedit()
GET    /cuschangepsw                controllers.Application.cuschangepsw()
POST   /cusinfoeditsubmit           controllers.Application.cusinfoeditsubmit()
POST   /cuschangepswsubmit          controllers.Application.cuschangepswsubmit()
#profile-trainer
GET    /trainerschedule             controllers.Application.trainerschedule()
GET    /trainercourseapproved       controllers.Application.trainercourseapproved()
GET    /trainercourseverifying      controllers.Application.trainercourseverifying()
GET    /trainercoursecompleted      controllers.Application.trainercoursecompleted()
GET    /trainercoursecanceled       controllers.Application.trainercoursecanceled()
GET    /trainerbasicinfo            controllers.Application.trainerbasicinfo()
GET    /traienrbasicinfoedit        controllers.Application.trainerbasicinfoedit()
GET    /trainerinfo                 controllers.Application.trainerinfo()
GET    /trainerinfoedit             controllers.Application.trainerinfoedit()
GET    /traineraddcourse            controllers.Application.traineraddcourse()
GET    /trainerchangepsw            controllers.Application.trainerchangepsw()
POST   /traineraddcoursesubmit      controllers.Application.traineraddcoursesubmit()
POST   /trainerinfoeditsubmit       controllers.Application.trainerinfoeditsubmit()
POST   /trainerbasicinfoeditsubmit  controllers.Application.trainerbasicinfoeditsubmit()

#order
GET    /createorder                 controllers.Application.createOrder(orderId: String ?= null, eventbriteId: String ?= null)


#calendar
POST  /addschedule                  controllers.Application.addschedule()
GET   /getcalendar                  controllers.Application.getschedule()

#mail
GET    /activate                    controllers.Application.activate(token: String)
GET    /resetpsw                    controllers.Application.resetpsw(token: String)

#search
GET     /searchall                  controllers.Application.searchall()   
POST    /search  	                controllers.Application.search()
GET     /searchloc                  controllers.Application.searchloc(city: String, region: String)

#itempage
GET    /itempage/:id                controllers.Application.itempage(id: Integer)
GET    /viewdetaillocation/:id      controllers.Application.viewdetaillocation(id: Integer)

#state&city
POST   /showcity                    controllers.Application.showCity()
POST   /showSiderbarCity            controllers.Application.showSiderbarCity()

#test
GET		/test						controllers.Application.test()
GET		/testAuth					controllers.Application.testAuth()

#review
GET     /review                     controllers.Application.review(orderId: String)

#dashboard
GET     /dashConcreteCourseRequest  controllers.Application.dashConcreteCourseRequest()
GET     /concreteCourseDisplay      controllers.Application.concreteCourseDisplay()
GET     /dashConcreteCourseRequestdetail  controllers.Application.dashConcreteCourseRequestdetail(concreteCourseId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /javascriptRoutes     		controllers.Application.javascriptRoutes
